package org.example;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner=new Scanner(System.in);
        int a,b,c;
        System.out.println("Para_miktarı_giriniz: ");
        a=scanner.nextInt();
        b=a+(a*18/100);
        c=b-a;
        System.out.println("Bilgilendirme \n" +
                "KDV siz Fiyat="+a+"\n"+
                "KDV li Fiyat ="+b+"\n"+
                "KDV Tutarı   ="+c);
